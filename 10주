#include <stdio.h>
#include <string.h>

int main()
{
    int id[5] = { 0, 0, 0, 0, 0 };
    char name[5][20];
    int price[5] = { 0, 0, 0, 0, 0 };
    int in[5] = { 0, 0, 0, 0, 0 };
    int out[5] = { 0, 0, 0, 0, 0 };
    int total[5] = { 0, 0, 0, 0, 0 };

    int menu;
    int pid;
    int i;
    int found;

    while (1){
        printf("원하는 메뉴를 선택하세요.(1. 입고, 2. 판매, 3. 개별현황, 4. 전체현황, 5. 종료)\n");
        scanf("%d", &menu);

        if (menu == 1){
            printf("상품ID : ");
            scanf("%d", &pid);

            found = -1;
            for (i = 0; i < 5; i++){
                if (id[i] == pid)
                    found = i;
}

            if (found == -1){
                for (i = 0; i < 5; i++){
                    if (id[i] == 0){
                        id[i] = pid;
                        printf("상품명 : ");
                        scanf("%s", name[i]);
                        printf("상품가격 : ");
                        scanf("%d", &price[i]);
                        printf("입고량 : ");
                        scanf("%d", &in[i]);
                        break;
                    }
                }
            }
            else
            {
                printf("입고량 : ");
                scanf("%d", &in[found]);
            }
        }
        else if (menu == 2)
        {
            printf("상품ID : ");
            scanf("%d", &pid);

            found = -1;
            for (i = 0; i < 5; i++)
            {
                if (id[i] == pid)
                    found = i;
            }

            if (found == -1)
            {
                printf("존재하지 않는 상품입니다.\n");
            }
            else{
                printf("판매량 : ");
                scanf("%d", &out[found]);
                total[found] += out[found] * price[found];
            }
        }
        else if (menu == 3)
        {
            printf("상품ID : ");
            scanf("%d", &pid);

            found = -1;
            for (i = 0; i < 5; i++){
                if (id[i] == pid)
                    found = i;
            }

            if (found == -1){
                printf("존재하지 않는 상품입니다.\n");
            }
            else {
                printf("상품명 : %s\n", name[found]);
                printf("가격 : %d\n", price[found]);
                printf("입고량 : %d\n", in[found]);
                printf("판매량 : %d\n", out[found]);
                printf("총판매금액 : %d\n", total[found]);
            }
        }
        else if (menu == 4){
            for (i = 0; i < 5; i++){
                if (id[i] != 0) {
                    printf("ID %d %s %d %d %d %d\n",
                        id[i], name[i], price[i], in[i], out[i], total[i]);
                }
            }
        }
        else if (menu == 5){
            break;
        }
    }

    return 0;
}
