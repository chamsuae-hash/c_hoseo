
#include <stdio.h>
#include <string.h>

int main()
{
    int in[5] = { 0, 0, 0, 0, 0 };
    int out[5] = { 0, 0, 0, 0, 0 };
    int stock[5] = { 0, 0, 0, 0, 0 };
    char name[5][20];

    int menu;
    int sub;
    int id;
    int i;

    int total_in;
    int total_out;
    int max_id;
    int min_id;

    while (1)
    {
        printf("원하는 메뉴를 선택하세요.(1. 입고, 2. 판매, 3. 상품현황, 4. 상품명 입력, 5. 종료)\n");
        scanf("%d", &menu);

        if (menu == 1)
        {
            printf("입고수량 입력 : 전체 상품 입고수량 입력 1, 개별 상품 입력 2\n");
            scanf("%d", &sub);

            if (sub == 1)
            {
                for (i = 0; i < 5; i++)
                {
                    scanf("%d", &in[i]);
                    stock[i] += in[i];
                }
            }
            else if (sub == 2)
            {
                scanf("%d", &id);
                scanf("%d", &in[id - 1]);
                stock[id - 1] += in[id - 1];
            }
        }
        else if (menu == 2)
        {
            printf("판매수량 입력 : 전체 상품 판매수량 입력 1, 개별 상품 입력 2\n");
            scanf("%d", &sub);

            if (sub == 1)
            {
                for (i = 0; i < 5; i++)
                {
                    scanf("%d", &out[i]);
                    stock[i] -= out[i];
                }
            }
            else if (sub == 2)
            {
                scanf("%d", &id);
                scanf("%d", &out[id - 1]);
                stock[id - 1] -= out[id - 1];
            }
        }
        else if (menu == 3)
        {
            total_in = 0;
            total_out = 0;
            max_id = 0;
            min_id = 0;

            for (i = 0; i < 5; i++)
            {
                total_in += in[i];
                total_out += out[i];
            }

            for (i = 1; i < 5; i++)
            {
                if (out[i] > out[max_id])
                    max_id = i;
                if (out[i] < out[min_id])
                    min_id = i;
            }

            printf("재고수량 : ");
            for (i = 0; i < 5; i++)
            {
                printf("%d ", stock[i]);
            }
            printf("\n");

            printf("총 판매량 : %d (판매율 %.2f%%)\n", total_out, (double)total_out / total_in * 100);

            printf("가장 많이 판매된 상품 : ID %d, 상품명 : %s, 판매량 %d\n",
                max_id + 1, name[max_id], out[max_id]);

            printf("가장 적게 판매된 상품 : ID %d, 상품명 : %s, 판매량 %d\n",
                min_id + 1, name[min_id], out[min_id]);

            for (i = 0; i < 5; i++)
            {
                if (stock[i] <= 2)
                {
                    printf("상품 ID %d : 상품명 : %s 재고부족(%d)\n",
                        i + 1, name[i], stock[i]);
                }
            }
        }
        else if (menu == 4)
        {
            for (i = 0; i < 5; i++)
            {
                printf("ID %d 상품명 : ", i + 1);
                scanf("%s", name[i]);
            }
        }
        else if (menu == 5)
        {
            break;
        }
    }

    return 0;
}
